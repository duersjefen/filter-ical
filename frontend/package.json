{
  "name": "ical-viewer-frontend",
  "version": "1.0.0",
  "description": "iCal Viewer Frontend - ClojureScript SPA",
  "main": "index.js",
  "scripts": {
    "dev": "npx shadow-cljs watch app",
    "build": "npm run css:build && npx shadow-cljs release app",
    "serve": "npx shadow-cljs server",
    "css:build": "npx tailwindcss -i ./src/input.css -o ./resources/public/css/app.css",
    "css:watch": "npx tailwindcss -i ./src/input.css -o ./resources/public/css/app.css --watch",
    "dev:all": "npm run css:watch & npm run dev"
  },
  "devDependencies": {
    "shadow-cljs": "^2.25.10",
    "tailwindcss": "^4.1.13"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
