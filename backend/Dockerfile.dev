# Backend Development Dockerfile - Optimized for hot reloading
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies including curl for health checks
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better layer caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Install development dependencies for hot reloading
RUN pip install --no-cache-dir watchdog

# Copy OpenAPI specification and domains configuration
COPY openapi.yaml ./
COPY domains.yaml ./

# Create data directory for database
RUN mkdir -p /app/data

# Create a non-root user for development
RUN useradd -m -u 1000 devuser && chown -R devuser:devuser /app
USER devuser

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:3000/health || exit 1

# Development command with hot reloading
# The app directory will be mounted as a volume, so changes will be reflected
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "3000", "--reload", "--reload-dir", "/app"]