[flake8]
# Code quality configuration following industry standards

# Maximum line length
max-line-length = 88

# Exclude directories
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    alembic/versions,
    build,
    dist

# Ignore specific error codes
ignore = 
    # Black handles line length
    E501,
    # Black handles whitespace
    W503,
    # Allow uppercase variables (for constants)
    N806

# Maximum complexity
max-complexity = 10

# Import order style (compatible with isort)
import-order-style = google

# Per-file ignores
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow long lines in Alembic migrations
    alembic/versions/*.py:E501