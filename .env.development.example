# =============================================================================
# Local Development Environment Configuration (WSL2)
# =============================================================================
# Use with docker-compose.dev.yml (PostgreSQL only)
# Run backend/frontend NATIVELY for fastest hot reload
# =============================================================================

# Application Settings
ENVIRONMENT=development
NODE_ENV=development
DEBUG=true

# Database (PostgreSQL running in Docker)
DATABASE_URL=postgresql://filterical_dev:dev_password_change_me@localhost:5432/filterical_development

# Security (dev-only - DO NOT use in production)
SECRET_KEY=dev-secret-key-change-me-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-for-local-development-only
ADMIN_PASSWORD=admin

# Backend Configuration
PYTHONPATH=/app
LOG_LEVEL=DEBUG
DISABLE_BACKGROUND_TASKS=false

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:3000

# Development Optimizations
DEV_MODE=true
HTTP_TIMEOUT=30

# SMTP Email Configuration (for password reset emails)
# Copy actual credentials from 1Password or multi-tenant-platform configs
SMTP_HOST=mail.privateemail.com
SMTP_PORT=587
SMTP_USERNAME=info@paiss.me
SMTP_PASSWORD=your-smtp-password-here
SMTP_FROM_EMAIL=info@paiss.me
ADMIN_EMAIL=info@paiss.me
